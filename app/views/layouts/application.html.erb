<!DOCTYPE html>
<html>
  <head>
    <title>PhotoClip</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
        <li>
          <%= link_to "投稿管理", admin_posts_path %>
        </li>
        <li>
          <%= link_to "コメント管理", admin_comments_path %>
        </li>
        <li>
          <%= link_to "タグ管理",  admin_tags_path %>
        </li>
        <li>
          <%= link_to "ユーザー管理", admin_users_path %>
        </li>
        <li>
          <%= link_to "ジャンル管理", admin_genres_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>

      <% elsif user_signed_in? %>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to "ゲストログイン", homes_guest_sign_in_path, method: :post %>
        </li>

      <% else %>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to "About", about_path %>
        </li>

      <% end %>


    </header>
    <%= yield %>
  </body>
</html>
