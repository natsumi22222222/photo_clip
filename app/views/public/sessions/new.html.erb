<div class="container">
  <div class="row text-center">
    <div class= "col-12">
      <img src= '/assets/marker.jpeg' alt= "" class= "marker-image">
      <h4>ログイン</h4>

      <%= form_with model: @user, url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary mt-3 mb-3" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>


    </div>
  </div>
</div>