<div class="container text-center">
  <div class="row mb-3">
    <div class="col-12">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.label :keywords, '検索ワード' %>
        <%= text_field_tag :keywords, params[:keywords] %>
        <%= f.select('type', options_for_select([%w[AND AND], %w[OR OR]], { :selected => params[:type] })) %>
        <%= f.submit "検索", class: "btn btn-outline-primary"%>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% if @results.nil? %>
        <p>検索キーワードを入力して下さい。</p>
      <% elsif @results.count > 0 %>
        <%= @keywords %> 検索結果 ( <%= @type %> )
        <% @results.each do |result| %>
          <p>
            <%= link_to result.title %><br>
            <%= link_to result.body %>
          </p>
        <% end %>
      <% elsif  @results.count == 0 %>
        <p>検索結果はありません。</p>
      <% end %>
    </div>
  </div>
</div>