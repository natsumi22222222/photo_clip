<div class="container">
  <div class="row text-center">
    <div class= "col-12">
      <img src= '/assets/marker.jpeg' alt= "" class= "marker-image">
      <h3>新規会員登録</h3>

      <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>


        <div class="form-group">
          <%= f.label "ユーザー名" %><br>
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em>
          <% end %><br>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label "パスワード(確認用)" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= render "public/shared/links" %>

    </div>
  </div>
</div>