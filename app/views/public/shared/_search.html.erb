<% if user_signed_in? %>
  <div class="search_form">
    <% form_with url: search_path, local: true, do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, option_for_select([['User'],['Post']]) %>
      <%= f.select :search, option_for_select([["完全一致"],["perfect_match"],["前方一致","forward_march"],["後方一致","backward_march"],["部分一致","partial_march"]]) %>
      <%= f.submit "検索", class: "btn btn-outline-primary" %>
  </div>