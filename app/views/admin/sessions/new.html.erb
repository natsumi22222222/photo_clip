<div class="container">
  <div class="row text-center">
    <div class= "col-12">
      <img src= '/assets/marker.jpeg' alt= "" class= "marker-image">

      <h2>管理者ログイン</h2>

      <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
        <div class="field mb2">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb2">
          <%= f.label :password, "パスワード" %><br>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
        </div>

      <% end %>
    </div>
  </div>
</div>