<div class="container text-center">
  <div class="row">
    <div class="col-12">
      <h1>投稿管理</h1>
      <table class= "table">
        <thead>
          <tr>
            <th>投稿画像</th>
            <th>ユーザー名</th>
            <th>投稿時間</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
          <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to admin_post_path(post.id) do %>
                  <%= image_tag post.get_image, size: "100x100" %>
                <% end %>
              </td>
              <td>
                 <%= post.user.name %>
              </td>
              <td>
                <%= post.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                <%= link_to "編集する",edit_admin_post_path(post.id) %>
              </td>
              <td>
                <%= link_to "削除する",admin_post_path(post.id), method: :delete, data: {confirm: "削除しますか？"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= paginate @posts_page %>
    </div>
  </div>
</div>