<div class="container text-center">
  <div class="row">
    <div class="col-12">
      <h2 class= "mb-5">管理者タグ編集</h2>
      <%= form_with model: @tag, url: admin_tag_path(@tag.id), method: :patch do |f| %>
        <%= f.label :name, "タグ:" %>
        <%= f.text_field :name %><br>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>