<div class="container text-center">
  <div class="row">
    <div class="col-12">
      <h2>コメント管理画面</h2>
      <table class= "table mt-5 mb-3">
        <thead>
          <tr>
            <th>コメントユーザー</th>
            <th>投稿時間</th>
            <th>コメント</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
          <tbody>
          <% if @comments.present? %>
            <% @comments.each do |comment| %>
            <tr>
              <td>
                <%= comment.user.name %>
              </td>
              <td>
                <%= comment.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                <%= comment.comment %>
              </td>
              <td>
                <%= link_to "削除する",admin_comment_path(comment.id), method: :delete, data: {confirm: "削除しますか？"} %>
              </td>
            </tr>
            <% end %>
          <% else %>
            <p>コメントがありません。</p>
          <% end %>
        </tbody>
      </table>
      <%= paginate @comments_page %>
    </div>
  </div>
</div>