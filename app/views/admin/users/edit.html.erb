<div class="container text-center">
  <div class="row">
    <div class="col-12">
      <h2 class= "mb-5">管理者ユーザー編集</h2>
      <%= form_with model: @user, url: admin_post_path(@post.id), method: :patch do |f| %>
        <%= f.file_field :image, placeholder: "投稿画像", accept: "image/*"  %><br>
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title %><br>
        <%= f.label :body, "詳細文" %>
        <%= f.text_area :body %><br>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>