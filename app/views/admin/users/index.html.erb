<div class="container text-center">
  <div class="row">
    <div class="col-12">
      <h2>ユーザー管理</h2>
      <table class= "table mt-5 mb-3">
        <thead>
          <tr>
            <th>ユーザー画像</th>
            <th>ユーザー名</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "詳細を見る", admin_user_path(user.id) %>
            </td>
            <td>
              <%= link_to "編集する",edit_admin_user_path(user.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>